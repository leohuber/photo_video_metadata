#!/usr/bin/env python3
import glob
import os

print("Starting the cleanup process of metadate .txt files ...")

# Use glob to find all .txt files in the current directory
txt_files = glob.glob('./*.txt')
print(f"Found {len(txt_files)} .txt files to remove.")

# Loop through each file path found
for file_path in txt_files:
    print("Removing file: {file_path}")
    os.remove(file_path)

print("Cleanup process completed.")